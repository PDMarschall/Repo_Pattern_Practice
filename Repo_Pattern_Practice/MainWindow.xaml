<Window x:Class="ZipcodeEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="460" FontFamily="Verdana" 
        FontSize="12" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="34"/>
            <RowDefinition Height="34"/>
            <RowDefinition Height="64"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Zipcode" VerticalAlignment="Center"/>
        <TextBlock Text="City name" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox Name="txtCode" Grid.Column="1" Width="80" HorizontalAlignment="Left" Margin="5"/>
        <TextBox Name="txtCity" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <Button Name="cmdSeek" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Right" 
            Width="70" Content="Select" Margin="5,20,5,20" Click="cmdSeek_Click" />
        <Button Name="cmdAdd" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Right" 
            Width="70" Content="Insert" Margin="5,20,85,20" Click="cmdAdd_Click" />
        <Button Name="cmdUpdate" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Right" 
            Width="70" Content="Update" Margin="5,20,165,20" Click="cmdUpdate_Click" />
        <Button Name="cmdRemove" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Right" 
            Width="70" Content="Delete" Margin="5,20,245,20" Click="cmdRemove_Click" />
        <Button Name="cmdClear" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Right" 
            Width="70" Content="Clear" Margin="5,20,325,20" Click="cmdClear_Click" />

        <DataGrid Name="grid" Grid.Row="3" Grid.ColumnSpan="2" AutoGenerateColumns="False" 
              CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single" 
              SelectionChanged="grid_SelectionChanged" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Code" Width="80" Binding="{Binding Code}" />
                <DataGridTextColumn Header="City name" Width="*" Binding="{Binding City}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
